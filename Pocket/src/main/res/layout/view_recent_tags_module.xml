<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.pocket.ui.view.menu.SectionHeaderView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lb_recent_tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Recent Tags"
        />
    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/tag1"
        style="@style/TitleRowStyle"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:text="Tag 1"
        />
    <com.pocket.ui.view.themed.ThemedView
        android:id="@+id/divider1"
        style="@style/Pkt_ThinDivider"
        android:layout_marginStart="@dimen/pkt_side_grid"
        android:layout_marginLeft="@dimen/pkt_side_grid"
        android:layout_marginEnd="@dimen/pkt_side_grid"
        android:layout_marginRight="@dimen/pkt_side_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tag1"
        />
    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/tag2"
        style="@style/TitleRowStyle"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        tools:text="Tag 2"
        />
    <com.pocket.ui.view.themed.ThemedView
        android:id="@+id/divider2"
        style="@style/Pkt_ThinDivider"
        android:layout_marginStart="@dimen/pkt_side_grid"
        android:layout_marginLeft="@dimen/pkt_side_grid"
        android:layout_marginEnd="@dimen/pkt_side_grid"
        android:layout_marginRight="@dimen/pkt_side_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tag2"
        />
    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/tag3"
        style="@style/TitleRowStyle"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        tools:text="Tag 3"
        />
    <com.pocket.ui.view.themed.ThemedView
        style="@style/Pkt_ThinDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tag3"
        app:layout_constraintVertical_bias="1.0"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
