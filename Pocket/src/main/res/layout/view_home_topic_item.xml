<?xml version="1.0" encoding="utf-8"?>
<com.pocket.ui.view.themed.ThemedConstraintLayout2
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/topicTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textFontWeight="500"
        android:fontFamily="@font/graphik"
        android:textColor="@color/pkt_themed_grey_1"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chevron"
        tools:text="Technology"
        />
    
    <com.pocket.ui.view.themed.ThemedImageView
        android:id="@+id/chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pkt_forward_chevron_line"
        android:tint="@color/pkt_themed_grey_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/topicTitle"
        app:layout_constraintBottom_toBottomOf="@id/topicTitle"/>
    
    <com.pocket.ui.view.themed.ThemedView
        style="@style/Pkt_ThinDivider"
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/topicTitle"/>

</com.pocket.ui.view.themed.ThemedConstraintLayout2>