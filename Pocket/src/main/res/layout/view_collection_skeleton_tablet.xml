<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    >
    
    <com.pocket.ui.view.themed.ThemedView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <com.pocket.ui.view.themed.ThemedView
        android:id="@+id/author"
        android:layout_width="60dp"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />
    
    <com.pocket.ui.view.themed.ThemedView
        android:id="@+id/intro1"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author" />
    
    <com.pocket.ui.view.themed.ThemedView
        android:id="@+id/intro2"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro1" />
    
    <com.pocket.ui.view.themed.ThemedView
        android:id="@+id/intro3"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/bg_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro2" />
    
    <include
        android:id="@+id/heroCard1"
        layout="@layout/view_home_slate_hero_card_skeleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@id/heroCard2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro3" />
    
    <include
        android:id="@+id/heroCard2"
        layout="@layout/view_home_slate_hero_card_skeleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/heroCard1"
        app:layout_constraintTop_toBottomOf="@id/intro3" />
    
    <include
        android:id="@+id/heroCard3"
        layout="@layout/view_home_slate_hero_card_skeleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/heroCard4"
        app:layout_constraintTop_toBottomOf="@id/heroCard1" />
    
    <include
        android:id="@+id/heroCard4"
        layout="@layout/view_home_slate_hero_card_skeleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/heroCard3"
        app:layout_constraintTop_toBottomOf="@id/heroCard2" />
    
    <include
        android:id="@+id/heroCard5"
        layout="@layout/view_home_slate_hero_card_skeleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/heroCard6"
        app:layout_constraintTop_toBottomOf="@id/heroCard3" />
    
    <include
        android:id="@+id/heroCard6"
        layout="@layout/view_home_slate_hero_card_skeleton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/heroCard5"
        app:layout_constraintTop_toBottomOf="@id/heroCard4" />

</androidx.constraintlayout.widget.ConstraintLayout>