<?xml version="1.0" encoding="utf-8"?>
<com.pocket.ui.view.themed.ThemedConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingBottom="0dp"
    >
    
    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/name"
        style="@style/Pkt_Text_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pkt_side_grid"
        android:layout_marginTop="@dimen/pkt_space_md"
        android:layout_marginEnd="@dimen/pkt_side_grid"
        app:layout_constraintBottom_toTopOf="@+id/variant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="temp.android.unleash.debug"
        />
    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/variant"
        style="@style/Pkt_Text_Small_Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pkt_space_sm"
        app:layout_constraintBottom_toTopOf="@+id/payload"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="control"
        />
    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/payload"
        style="@style/Pkt_Text_Small_Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pkt_space_sm"
        app:layout_constraintBottom_toTopOf="@+id/bottomMargin"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/variant"
        tools:text="Lorem ipsum"
        tools:visibility="visible"
        />
    <Space
        android:id="@+id/bottomMargin"
        android:layout_width="0dp"
        android:layout_height="@dimen/pkt_space_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payload"
        />
</com.pocket.ui.view.themed.ThemedConstraintLayout>
