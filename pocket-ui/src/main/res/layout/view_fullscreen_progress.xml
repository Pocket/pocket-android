<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="com.pocket.ui.view.progress.FullscreenProgressView">

    <com.pocket.ui.view.progress.RainbowProgressCircleView
        android:id="@+id/progress_circle"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/message"
        style="@style/Pkt_Text_Small_Medium"
        app:layout_constraintTop_toBottomOf="@id/progress_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxWidth="200dp"
        android:paddingTop="5dp"
        android:textColor="@color/white" />
</merge>