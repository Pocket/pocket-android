<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="com.pocket.ui.view.settings.SettingsImportantButton">

    <com.pocket.ui.view.themed.ThemedView
        android:id="@+id/top_divider"
        style="@style/Pkt_ThickDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.pocket.ui.view.themed.ThemedTextView
        android:id="@+id/text"
        style="@style/Pkt_Text_Link"
        app:compatTextColor="@color/pkt_themed_coral_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/pkt_menu_option_height"
        android:background="@drawable/cl_pkt_touchable_area"
        android:clickable="false"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_divider" />

</merge>